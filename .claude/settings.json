{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check --fix && uv run ruff format && uv run ty check",
            "timeout": 60
          }
        ]
      }
    ]
  }
}