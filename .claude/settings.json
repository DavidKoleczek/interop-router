{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(find:*)",
      "Bash(git clone:*)",
      "Bash(uv build:*)",
      "Bash(uv sync:*)",
      "Bash(uv run ruff format:*)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run ty:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check --fix && uv run ruff format && uv run ty check",
            "timeout": 10
          }
        ]
      }
    ]
  }
}